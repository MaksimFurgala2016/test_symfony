                        <div>
                            <span>Написал</span>
                            <span><a href="#">Пользователь</a></span>
                            <span>Дата</span>
                        </div>
                    </div>
                </div>
                <div class="container-fluid">
                    <div class="row">
                        <h5>Оставить комментарий</h5>
                    </div>
                    <div class="row">
                        <form class="container-fluid" method="post">
                            <textarea style="height: 100px" class="container-fluid" placeholder="Введите текст комментария..."></textarea>
                            <button>Написать</button>
                        </form>
                    </div>
                </div>
